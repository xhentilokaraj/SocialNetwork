@model SocialNetwork.Models.CommunityMember

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Join Community</h1>

@{string userId = string.Join("###", User.Claims.ToList()).Split("###")[3].Split(": ")[1];}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" value="@userId" type="hidden" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommunityId" class="control-label"></label>
                <select asp-for="CommunityId" class="form-control" asp-items="ViewBag.CommunityId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Join" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


